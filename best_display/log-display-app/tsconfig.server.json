{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "sourceRoot": "${workspaceRoot}/src"
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
